# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file             controllers.Assets.versioned(path="/public", file: Asset)

GET         /cats                     controllers.CategoryController.list
GET         /cats/:id                 controllers.CategoryController.get(id: Int)
POST        /cats                     controllers.CategoryController.create
PUT         /cats/:id                 controllers.CategoryController.update(id: Int)

PUT         /users/credentials        controllers.AccountController.updateCredentials
PUT         /users/profile            controllers.AccountController.updateProfile
GET         /users/profile            controllers.AccountController.getOwnProfile
GET         /users/profile/:id        controllers.AccountController.getProfile(id: Long)
POST        /register                 controllers.AccountController.register
POST        /login                    controllers.AccountController.login


GET         /admin/users              controllers.AdminController.getAccounts
POST        /admin/register           controllers.AdminController.register
