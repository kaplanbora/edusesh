# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

GET           /cats                           controllers.CategoryController.list
GET           /cats/:id                       controllers.CategoryController.get(id: Int)
POST          /cats                           controllers.CategoryController.create
PUT           /cats/:id                       controllers.CategoryController.update(id: Int)

POST          /login                          controllers.UserController.login
POST          /registerTrainee                controllers.UserController.registerTrainee
POST          /registerInstructor             controllers.UserController.registerInstructor
GET           /users/credentials              controllers.UserController.getSelfCredentials
GET           /users/credentials/:id          controllers.UserController.getCredentials(id: Long)
GET           /users/profile                  controllers.UserController.getSelfProfile
GET           /users/profile/:id              controllers.UserController.getProfile(id: Long)
PUT           /users/instructorProfile        controllers.UserController.updateInstructorProfile
PUT           /users/traineeProfile           controllers.UserController.updateTraineeProfile
PUT           /users/credentials              controllers.UserController.updateCredentials
DELETE        /users                          controllers.UserController.delete

